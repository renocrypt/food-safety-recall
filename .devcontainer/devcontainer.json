{
  "name": "Bun React App",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-20",
  "features": {
    "ghcr.io/eitsupi/devcontainer-features/bun:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "postCreateCommand": "bun install",
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Application"
    }
  }
}
